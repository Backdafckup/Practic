            <td> <%= link_to "show", station_printer_path(@station, pr) %></td>
            <td><%= link_to "edit", edit_station_printer_path(@station, pr) %></td>
            <td><%= link_to "delete", '#' %></td>
          </tr>
          </tbody>
      <% end %>
