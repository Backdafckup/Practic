<% if @modems.any? %>

    <div class="alert alert-success">
      <strong>MODEMS</strong>
    </div>

    <table class="table">
      <thead>
      <tr class="success">
        <th>Model</th>
        <th>Type</th>

      </tr>
      </thead>
      <tbody>

      <% @modems.each do |modem| %>
          <tr>
            <td><%= modem.model %></td>
            <td> <%= modem.modem_type %> </td>

            <td> <%= link_to "show", station_modem_path(@station, modem) %></td>
            <td><%= link_to "edit", edit_station_modem_path(@station, modem) %></td>
            <td><%= link_to "delete", "#"%></td>
          </tr>
          </tbody>
      <% end %>
      </table>
<% end %>

