<table class="table">
  <thead>
  <tr>
    <th>Name</th>
    <th>District</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
  </thead>


  <% @stations.each do |station| %>

      <tr>
        <td><%= station.name %></td>
        <td><%= station.district_id %></td>
