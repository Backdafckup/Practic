<h1>Listing devices</h1>

<table>
  <tr>
    <th>Device type</th>
    <th>Device model</th>
    <th>Source</th>
    <th>Commissioning</th>
    <th>Task</th>
    <th>Decommissioning</th>
    <th>Comment</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @devices.each do |device| %>
  <tr>
    <td><%= device.device_type %></td>
    <td><%= device.device_model %></td>
    <td><%= device.source %></td>
    <td><%= device.commissioning %></td>
    <td><%= device.task %></td>
    <td><%= device.decommissioning %></td>
    <td><%= device.comment %></td>
    <td><%= link_to 'Show', device %></td>
    <td><%= link_to 'Edit', edit_device_path(device) %></td>
    <td><%= link_to 'Destroy', device, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

