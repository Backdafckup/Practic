<h1>Listing devices</h1>

<% if @devices.any? %>
    device
    <table class="table">
      <thead>
      <tr>
        <th>Model</th>
        <th>Type</th>
        <th>Station_id</th>
      </tr>
      </thead>
      <tbody>

      <% @devices.each do |d| %>
          <tr>
            <td><%= d.device_model %></td>
            <td> <%= d.device_type %> </td>
            <td> <%= d.station_id %> </td>
            <td> <%= link_to "show", station_device_path(@station, d) %></td>
            <td><%= link_to "edit", edit_station_device_path(@station, d) %></td>
            <td><%= link_to "delete", '#' %></td>
          </tr>
          </tbody>
      <% end %>
      </table>
<% end %>