    <div class="field">
      <%= f.label :source %>
      <%= f.text_field :source %>
    </div>
    <div class="field">
      <%= f.label :commissioning %>
      <%= f.date_select :commissioning %>
    </div>
    <div class="field">
      <%= f.label :task %>
      <%= f.text_field :task %>
    </div>
    <div class="field">
      <%= f.label :decommissioning %>
      <%= f.date_select :decommissioning %>
    </div>
    <div class="field">
      <%= f.label :comment %>
      <%= f.text_field :comment %>
    </div>
    <div class="field">
      <%= f.label :station_id %>
      <%= f.text_field :station_id, :value => @station_id %>
    </div>
