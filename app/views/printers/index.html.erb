<h1>Listing printers</h1>

<% if @printers.any? %>
    printers
    <table class="table">
      <thead>
      <tr>
        <th>Device</th>
        <th>Model</th>
        <th>Station_id</th>
      </tr>
      </thead>
      <tbody>

      <% @printers.each do |pr| %>
          <tr>
            <td><%= pr.device %></td>
            <td> <%= pr.printer_model %> </td>
            <td> <%= pr.station_id %> </td>
            <td> <%= link_to "show", station_printer_path(@station, pr) %></td>
            <td><%= link_to "edit", edit_station_printer_path(@station, pr) %></td>
            <td><%= link_to "delete", '#' %></td>
          </tr>
          </tbody>
      <% end %>
      </table>
<% end %>
