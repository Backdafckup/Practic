<%= form_for([:station, @computer]) do |f| %>
    <% if @computer.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@computer.errors.count, "error") %> prohibited this computer from being saved:</h2>

          <ul>
            <% @computer.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="field">
      <%= f.label :computer_model %>

      <%= f.text_field :computer_model %>
    </div>
    <div class="field">
      <%= f.label :comp_type %>
        <%= f.select :comp_type, [['персональная'],
            ['многопользовательская'],
            ['мобильная'],
            ['рабочая станция']]%>

    </div>
    <div class="field">
      <%= f.label :comp_class %>
        <%= f.select :comp_class, [['1'],
            ['2'],
            ['3'],
            ['4'],
            ['5'],
            ['6']]%>
    </div>
    <div class="field">
      <%= f.label :platform %>
      <%= f.select :platform, [['386'],
            ['486'],
            ['Pentium'],
            ['Celeron'],
            ['AMD']]%>
    </div>
    <div class="field">
      <%= f.label :processor %>

      <%= f.text_field :processor %>
    </div>
    <div class="field">
      <%= f.label :memory %>

      <%= f.text_field :memory %>
    </div>
    <div class="field">
      <%= f.label :hdd %>

      <%= f.text_field :hdd %>
    </div>
    <div class="field">
      <%= f.label :display %>

      <%= f.text_field :display %>
    </div>
    <div class="field">
      <%= f.label :source %>
      <%= f.select :source, [['Республиканский бюджет'],
            ['Местный бюджет'],
            ['На балансе сторонней организации'],
            ['Передано безвозмездно'],
            ['Получено из других подразделений'],
            ['Спонсорские средства '],
            ['Платные услуги']]%>
    </div>
    <div class="field">
      <%= f.label :commissioning %>

      <%= f.date_select :commissioning %>
    </div>
    <div class="field">
      <%= f.label :task %>

      <%= f.text_field :task %>
    </div>
    <div class="field">
      <%= f.label :decommissioning %>

      <%= f.date_select :decommissioning %>
    </div>
    <div class="field">
      <%= f.label :comment %>

      <%= f.text_field :comment %>
    </div>
    <div class="field">

      <%= f.label :station_id %>
      <%= f.text_field :station_id, :value => @station_id %>
    </div>

    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>
