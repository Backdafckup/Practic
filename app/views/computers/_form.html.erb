<%= form_for([:station, @computer]) do |f| %>
    <% if @computer.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@computer.errors.count, "error") %> prohibited this computer from being saved:</h2>

          <ul>
            <% @computer.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="field">
      <%= f.label :computer_model %>

      <%= f.text_field :computer_model %>
    </div>
    <div class="field">
      <%= f.label :comp_type %>
        <%= f.select :comp_type, [['персональная'],
            ['многопользовательская'],
            ['мобильная'],
            ['рабочая станция']]%>

    </div>
    <div class="field">
      <%= f.label :comp_class %>

      <%= f.text_field :comp_class %>
    </div>
    <div class="field">
      <%= f.label :platform %>

      <%= f.text_field :platform %>
    </div>
    <div class="field">
      <%= f.label :processor %>

      <%= f.text_field :processor %>
    </div>
    <div class="field">
      <%= f.label :memory %>

      <%= f.text_field :memory %>
    </div>
    <div class="field">
      <%= f.label :hdd %>

      <%= f.text_field :hdd %>
    </div>
    <div class="field">
      <%= f.label :display %>

      <%= f.text_field :display %>
    </div>
    <div class="field">
      <%= f.label :source %>

      <%= f.text_field :source %>
    </div>
    <div class="field">
      <%= f.label :commissioning %>

      <%= f.date_select :commissioning %>
    </div>
    <div class="field">
      <%= f.label :task %>

      <%= f.text_field :task %>
    </div>
    <div class="field">
      <%= f.label :decommissioning %>

      <%= f.date_select :decommissioning %>
    </div>
    <div class="field">
      <%= f.label :comment %>

      <%= f.text_field :comment %>
    </div>
    <div class="field">

      <%= f.label :station_id %>
      <%= f.text_field :station_id, :value => @station_id %>
    </div>

    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>
