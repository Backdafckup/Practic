<h1>Listing computers</h1>


<% if @computers.any? %>
    computers
    <table class="table">
      <thead>
      <tr>
        <th>Model</th>
        <th>Type</th>
        <th>Station_id</th>
      </tr>
      </thead>
      <tbody>

      <% @computers.each do |c| %>
          <tr>
            <td><%= c.computer_model %></td>
            <td> <%= c.comp_type %> </td>
            <td> <%= c.station_id %> </td>
            <td> <%= link_to "show", station_computer_path(@station, c) %></td>
            <td><%= link_to "edit", edit_station_computer_path(@station, c) %></td>
            <td><%= link_to "delete", '#' %></td>
          </tr>
          </tbody>
      <% end %>
      </table>
<% end %>

